@page
@model Indian_Navy.Pages.Employee_Data.DeleteModel
@{
}

<form method="post">
    <input hidden asp-for="employeeData.EmployeeId"/>
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class=" text-primary pl-3">Delete Employee From List</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="employeeData.EmployeeName"></label> 
            <input asp-for="employeeData.EmployeeName" disabled class="form-control" required placeholder="Enter Employee Name" />
        </div>
        <div class="mb-3">
            <label asp-for="employeeData.EmployeeAge"></label>
            <input asp-for="employeeData.EmployeeAge" disabled class="form-control" required placeholder="Enter Employee Age" />
        </div>
        <div class="mb-3">
            <label asp-for="employeeData.NativeLocation"></label>
            <input asp-for="employeeData.NativeLocation" disabled class="form-control" required placeholder="Enter Employee Native Location" />
        </div>
        <div class="mb-3">
            <label asp-for="employeeData.DateOfJoining"></label>
            <input type="date" disabled class="form-control form-control-lg" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Employee_Data.Read" class=" btn btn-secondary" style=" width:150px;">Back To List</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}
